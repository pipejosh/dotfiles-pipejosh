    },
    {
        "key": "space t 8",
        "command":  "workbench.action.openEditorAtIndex8",
        "when": "vim.mode == Normal"
    },
    {
        "key": "space t 9",
        "command":  "workbench.action.openEditorAtIndex9",
        "when": "vim.mode == Normal"
    },

    //? TABS

    //? COPILOT
    {
        "key": "space o c",
        "command": "workbench.panel.chat",
        "when": "workbench.panel.chat.view.copilot.active && vim.mode == Normal"
    },
    //? COPILOT

]
